<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplicationDevops</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplicationDevops.styles.css" asp-append-version="true" />
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            height: 100vh;
            background: linear-gradient(to right, #6a11cb, #2575fc);
            color: white;
        }

        p {
            font-size: 15px;
            font-weight: bold;
            text-align: center;
            padding: 20px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            width: 200px;
            margin:10px;
            
        }

        .navbar {
            
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #333;
            padding: 10px 20px;
        }

        /* Style des éléments de la barre de navigation */
        .navbar a {
            color: white;
            text-decoration: none;
            padding: 10px 15px;
            transition: background-color 0.3s;
        }

        .navbar a:hover {
            background-color: #575757;
            border-radius: 5px;
        }

        /* Conteneur pour les liens */
        .navbar-links {
            display: flex;
            gap: 15px;
        }


        .footer {
            position: absolute;
            bottom: 0;
            width: 100%;
            white-space: nowrap;
            line-height: 60px;
        }

        /* Style for footer links */
        .footer a {
            color: #ffffff;
            text-decoration: none;
        }

        .footer a:hover {
            color: #1b6ec2;
            text-decoration: underline;
        }
        .container-fluid{
            display: flex;
            flex-direction: row;
            
        }
        /* Adjust navbar position to top-right */
        .navbar-nav {
            margin-left: auto; /* Push the navbar items to the right */
        }

        /* Title styling */
        .main-title {
            font-size: 50px;
            font-weight: bold;
            color: #fff;
            text-align: center;
            margin-top: 30px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <div class="container">
                    <main role="main" class="pb-3">
                    <div class="main-title">
                        Azure DevOps Project
                     </div>
                </main>
                </div>
                <nav class="navbar">
                    <div class="navbar-links">
                        <a href="#">Accueil</a>
                        <a href="#">À propos</a>
                        <a href="#">Services</a>
                        <a href="#">Contact</a>
                    </div>
                </nav>
            </div>
        </nav>
    </header>
    
    <main>
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - WebApplicationDevops - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>